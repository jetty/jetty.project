<?xml version="1.0"  encoding="ISO-8859-1"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "https://www.eclipse.org/jetty/configure_9_3.dtd">

<!-- ==================================================================
Configure and deploy the test web application in $(jetty.home)/webapps/test

Note. If this file did not exist or used a context path other that /test
then the default configuration of jetty.xml would discover the test
webapplication with a WebAppDeployer.  By specifying a context in this
directory, additional configuration may be specified and hot deployments
detected.
===================================================================== -->

<Configure id="webapp" class="org.eclipse.jetty.ee10.webapp.WebAppContext">

  <Set name="contextPath">/test</Set>

  <Call name="getResourceFactory">
    <Call id="realmResource" name="newResource">
      <Arg><SystemProperty name="jetty.home" default="."/>/test-standard-realm.properties</Arg>
    </Call>
  </Call>

  <Get name="securityHandler">
    <Set name="loginService">
      <New class="org.eclipse.jetty.ee10.servlet.security.HashLoginService">
        <Set name="name">Test Realm</Set>        
        <Set name="config"><Ref refid="realmResource"/></Set>
      </New>
    </Set>
    <Set name="authenticator">
      <New class="org.eclipse.jetty.ee10.servlet.security.authentication.FormAuthenticator">
        <Set name="alwaysSaveUri">true</Set>
      </New>
    </Set>
    <Set name="checkWelcomeFiles">true</Set>
  </Get>

  <Set name="parentLoaderPriority">true</Set>

  <!-- Non standard error page mapping -->
  <!--
  <Get name="errorHandler">
    <Call name="addErrorPage">
      <Arg type="int">500</Arg>
      <Arg type="int">599</Arg>
      <Arg type="String">/dump/errorCodeRangeMapping</Arg>
    </Call>
  </Get>
  -->


</Configure>
