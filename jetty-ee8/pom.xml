            </goals>
            <phase>generate-test-sources</phase>
            <configuration>
              <testSources>true</testSources>
              <sourceProjectLocation>${ee9.module.path}/src/test/java</sourceProjectLocation>
              <outputDirectory>${project.build.testSourceDirectory}</outputDirectory>
            </configuration>
