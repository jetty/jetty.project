<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>jetty-plugin-test</artifactId>
    <groupId>org.mca</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <artifactId>overlay1-war</artifactId>
  <name>overlay1 :: war (jetty)</name>
  <packaging>war</packaging>

  <dependencies>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.mca</groupId>
      <artifactId>common</artifactId>
    </dependency>
    <dependency>
      <groupId>org.mca</groupId>
      <artifactId>module-a-war</artifactId>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.mca</groupId>
      <artifactId>module-b-war</artifactId>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.mca</groupId>
      <artifactId>static</artifactId>
      <classifier>zip</classifier>
      <type>zip</type>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>runOverlay1</id>
      <properties>
        <jetty.skip>false</jetty.skip>
        <jetty.jettyXml>${project.basedir}/src/config/jetty.xml</jetty.jettyXml>
        <jetty.port.file>${project.build.directory}/jetty-run-war-mojo-overlays-it.txt</jetty.port.file>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-maven-plugin</artifactId>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>overlay1WithDefaults</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <configuration>
              <overlays>
                <overlay />
                <overlay>
                  <groupId>org.mca</groupId>
                  <artifactId>module-a-war</artifactId>
                </overlay>
                <overlay>
                  <groupId>org.mca</groupId>
                  <artifactId>module-b-war</artifactId>
                </overlay>
                <overlay>
                  <groupId>org.mca</groupId>
                  <artifactId>static</artifactId>
                  <type>zip</type>
                  <classifier>zip</classifier>
                  <targetPath>/</targetPath>
                </overlay>
              </overlays>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>overlay1WithExcludes</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <configuration>
              <overlays>
                <overlay />
                <overlay>
                  <groupId>org.mca</groupId>
                  <artifactId>module-a-war</artifactId>
                  <excludes>
                    <exclude>WEB-INF/lib/*api*</exclude>
                  </excludes>
                </overlay>
                <overlay>
                  <groupId>org.mca</groupId>
                  <artifactId>module-b-war</artifactId>
                  <excludes>
                    <exclude>WEB-INF/lib/*api*</exclude>
                  </excludes>
                </overlay>
              </overlays>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>overlay1WithTargetPath</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <configuration>
              <overlays>
                <overlay />
                <overlay>
                  <groupId>org.mca</groupId>
                  <artifactId>module-a-war</artifactId>
                </overlay>
                <overlay>
                  <groupId>org.mca</groupId>
                  <artifactId>module-b-war</artifactId>
                  <targetPath>tp1</targetPath>
                </overlay>
                <overlay>
                  <groupId>org.mca</groupId>
                  <artifactId>static</artifactId>
                  <type>zip</type>
                  <classifier>zip</classifier>
                  <targetPath>static</targetPath>
                </overlay>
              </overlays>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
