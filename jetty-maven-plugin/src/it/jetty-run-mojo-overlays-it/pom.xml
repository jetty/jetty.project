<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.mca</groupId>
  <artifactId>jetty-plugin-test</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <modules>
    <module>common</module>
    <module>static</module>
    <module>module-a</module>
    <module>module-b</module>
    <module>overlay1-war</module>
    <module>overlay2</module>
  </modules>

  <properties>
    <jetty.version>@project.version@</jetty.version>
<!--    <jetty.version>9.4.20-SNAPSHOT</jetty.version>-->
    <jetty.skip>true</jetty.skip>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.compiler.source>1.8</maven.compiler.source>
  </properties>

  <dependencyManagement>
    <dependencies>
      <!-- project dependencies -->
      <dependency>
        <groupId>org.mca</groupId>
        <artifactId>common</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.mca</groupId>
        <artifactId>static</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.mca</groupId>
        <artifactId>static</artifactId>
        <version>${project.version}</version>
        <classifier>zip</classifier>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.mca</groupId>
        <artifactId>module-a-api</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.mca</groupId>
        <artifactId>module-a-impl</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.mca</groupId>
        <artifactId>module-a-war</artifactId>
        <version>${project.version}</version>
        <type>war</type>
      </dependency>
      <dependency>
        <groupId>org.mca</groupId>
        <artifactId>module-b-api</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.mca</groupId>
        <artifactId>module-b-impl</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.mca</groupId>
        <artifactId>module-b-war</artifactId>
        <version>${project.version}</version>
        <type>war</type>
      </dependency>
      <dependency>
        <groupId>org.mca</groupId>
        <artifactId>overlay1-war</artifactId>
        <version>${project.version}</version>
        <type>war</type>
      </dependency>
      <dependency>
        <groupId>org.mca</groupId>
        <artifactId>overlay2-war</artifactId>
        <version>${project.version}</version>
        <type>war</type>
      </dependency>

      <!-- rest -->
      <dependency>
        <groupId>javax.servlet</groupId>
        <artifactId>javax.servlet-api</artifactId>
        <version>3.1.0</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-deploy-plugin</artifactId>
          <version>3.0.0-M1</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-war-plugin</artifactId>
          <version>3.2.2</version>
        </plugin>
        <plugin>
          <groupId>org.eclipse.jetty</groupId>
          <artifactId>jetty-maven-plugin</artifactId>
          <version>${jetty.version}</version>
          <executions>
            <execution>
              <id>start-jetty</id>
              <phase>test-compile</phase>
              <goals>
                <goal>start</goal>
              </goals>
              <configuration>
                <skip>${jetty.skip}</skip>
                <systemProperties>
                  <systemProperty>
                    <name>jetty.port.file</name>
                    <value>${jetty.port.file}</value>
                  </systemProperty>
                </systemProperties>
                <nonBlocking>true</nonBlocking>
                <jettyXml>${jetty.jettyXml}</jettyXml>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
